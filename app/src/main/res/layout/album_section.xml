<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/sectionTitle"
            style="@style/TextTitle"
            android:text="@string/top_40_soundtracks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/sectionSubtitle"
            style="@style/TextSubTitle"
            android:text="@string/top_40_soundtracks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sectionTitle"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sectionList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sectionSubtitle" android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>